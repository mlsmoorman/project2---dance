<%- include('../partials/header') %>

<div class="container mt-3 text-center rounded" style="background-color: #6a3d7d6f;">
  <br>
  <h2>Performance List</h2>
  <p>You can choose from the below performances for additional details.</p>
  <% if (user) {%>
  <a href="/performances/new">Add Performance</a> 
  <% } %>
  <table class="table table-striped">
  <thead class="table-primary">
    <tr>
      <th>School</th>
      <th>Style</th>
      <th>Song Choice</th>
      <th>Date</th>
      <th>Details</th>
      <% if (user) { %>
      <th>Updates</th>
      <% } %>
    </tr>
  </thead>
  <tbody>
    <% performanceDocs.forEach(function(p) { %>
    <tr>
        <% if (p.teamName === 'Buffalo') { %>
          <td><%= p.teamName %>&nbsp;<img src="https://i.imgur.com/adyunyp.jpg" style="width:25px; border-radius: 50%;" /> </td><br>
          <br>
      <% } else if (p.teamName === 'Wayzata') {%>
          <td><%= p.teamName %>&nbsp;<img src="https://i.imgur.com/8Sp6WyN.png" style="width:25px; border-radius: 50%;" /> </td><br>
          <br>
      <% } else if (p.teamName === 'St. Michael/Albertville') {%>
          <td><%= p.teamName %>&nbsp;<img src="https://i.imgur.com/uoM91YI.jpg" style="width:25px; border-radius: 50%;" /> </td><br>
          <br>
      <% } else if (p.teamName === 'Minnetonka') {%>
          <td><%= p.teamName %>&nbsp;<img src="https://i.imgur.com/zXm2E9H.jpg" style="width:25px; border-radius: 50%;" /> </td><br>
          <br>
      <% } else if (p.teamName === 'Edina') {%>
          <td><%= p.teamName %>&nbsp;<img src="https://i.imgur.com/Xjb8GPr.png" style="width:25px; border-radius: 50%;" /> </td><br>
          <br>
      <% } else if (p.teamName === 'Eden Prairie') {%>
          <td><%= p.teamName %>&nbsp;<img src="https://i.imgur.com/gvnwqT9.png" style="width:25px; border-radius: 50%;" /> </td><br>
          <br>
      <% } else if (p.teamName === 'Hopkins') {%>
          <td><%= p.teamName %>&nbsp;<img src="https://i.imgur.com/yaCfzbK.png" style="width:25px; border-radius: 50%;" /> </td><br>
          <br>
      <% } else { %>
          <td><%= p.teamName %></div><br>
          <br>
      <% } %>









        <td><%= p.style %></td>
        <td><%= p.song %></td>
        
        <td><%= p.performanceDate.toLocaleDateString() %></td>
        <td><button type="button" class="btn btn-outline-info"><a href="/performances/<%= p._id %>">DETAILS</a></td></button>
      <% if (user) { %>
        <td>
        <% if (user && user._id.equals(p.user)) { %>
            <button type="button" class="btn btn-outline-warning"><a href="/performances/<%= p._id %>/edit" method="GET">UPDATE</a></button>
        <% } %>
        </td>
      <% } %>
    </tr>
    <% }); %>
  </tbody>
  </table>
<br>
</div>

<%- include('../partials/footer') %>